doctype html
html
  head
    meta(charset='utf-8')
  body
    h1
      a(href='/topic') Server Side Main
    ul
      each topic in topics
        li
          a(href='/topic/'+topic.id)= topic.title
    artcle
      if topic
        h2= topic.title
        = topic.des
        div= 'by '+topic.author
      else
        h2 GFRIEND
        | Soweon Yeahrin Eunha yujoo SinB Eumji
    ul
      li
        a(href='/topic/add') create add
      if topic
        li
          a(href='/topic/'+topic.id+'/edit') edit
        li
          a(href='/topic/'+topic.id+'/delete') delete
